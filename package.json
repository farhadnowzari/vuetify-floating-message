{
  "author": "Farhad Nowzari",
  "name": "vuetify-message",
  "description": "This plugin make the vuetify custom floating messages/snackbars easier to use.",
  "version": "1.0.0",
  "main": "dist/VuetifyMessage.umd.js",
  "module": "dist/VuetifyMessage.esm.js",
  "unpkg": "dist/VuetifyMessage.min.js",
  "license": "ISC",
  "browser": {
    "./sfc": "src/VuetifyMessage.vue"
  },
  "keywords": [
    "vuejs",
    "vue",
    "vuetify",
    "materialdesign",
    "message",
    "dialog",
    "snackbar",
    "floating"
  ],
  "bugs": {
    "url": "https://github.com/farhadnowzari/vuetify-message/issues"
  },
  "homepage": "https://github.com/farhadnowzari/vuetify-message#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/farhadnowzari/vuetify-message.git"
  },
  "scripts": {
    "build": "npm run lint & npm run build:umd & npm run build:es & npm run build:unpkg & npm run lint:fix",
    "build:umd": "rollup --config build/rollup.config.js --format umd --file dist/VuetifyMessage.umd.js",
    "build:es": "rollup --config build/rollup.config.js --format es --file dist/VuetifyMessage.esm.js",
    "build:unpkg": "rollup --config build/rollup.config.js --format iife --file dist/VuetifyMessage.min.js",
    "lint": "eslint --ext js --ext vue src",
    "lint:fix": "npm run lint -- --fix"
  },
  "devDependencies": {
    "@rollup/plugin-buble": "^0.21.3",
    "@rollup/plugin-commonjs": "^16.0.0",
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.7.2",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-vue": "^6.2.2",
    "rollup": "^2.33.3",
    "rollup-plugin-vue": "^5.1.9",
    "sass": "^1.19.0",
    "sass-loader": "^8.0.0",
    "vue": "^2.6.11",
    "vue-cli-plugin-vuetify": "~2.0.7",
    "vue-template-compiler": "^2.6.11",
    "vuetify-loader": "^1.3.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
